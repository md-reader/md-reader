{
  "name": "__MSG_ext_name__",
  "version": "2.9.0",
  "author": "Bener",
  "manifest_version": 2,
  "description": "__MSG_ext_desc__",
  "default_locale": "en",
  "icons": {
    "16": "images/logo_16.png",
    "32": "images/logo_32.png",
    "48": "images/logo_48.png",
    "128": "images/logo_128.png"
  },
  "web_accessible_resources": [
    "css/*",
    "images/*"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_title": "md-reader",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "js/content-script.js"
      ],
      "css": [
        "css/content-script.css"
      ],
      "matches": [
        "file://*/*.md",
        "file://*/*.mkd",
        "file://*/*.markdown",
        "http://*/*.md",
        "http://*/*.mkd",
        "http://*/*.markdown",
        "https://*/*.md",
        "https://*/*.mkd",
        "https://*/*.markdown"
      ]
    }
  ],
  "permissions": [
    "storage",
    "tabs"
  ]
}