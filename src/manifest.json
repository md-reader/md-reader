{
  "name": "MD Reader",
  "version": "2.0.9",
  "manifest_version": 2,
  "description": "A markdown file reader",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    "css/*",
    "images/*"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_title": "md-reader",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "js/content-script.js"
      ],
      "css": [
        "css/content-script.css"
      ],
      "matches": [
        "file://*/*.md",
        "file://*/*.mkd",
        "file://*/*.markdown",
        "http://*/*.md",
        "http://*/*.mkd",
        "http://*/*.markdown",
        "https://*/*.md",
        "https://*/*.mkd",
        "https://*/*.markdown"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}